{
  "manifest_version": 3,
  "name": "Memory Info Extension",
  "version": "1.0",
  "description": "Displays used and current heap memory info for the current tab.",
  "permissions": ["tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "32.png"
    }
  },
  "icons": {
    "32": "32.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "script-src": [
      "self",
      "https://cdnjs.cloudflare.com"
    ]
  }
}
